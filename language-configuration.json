{
    "comments": {
        "lineComment": "//",
        "blockComment": [ "/*", "*/" ]
    },
    "brackets": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"],
        ["({", "})"],
        ["([", "])"],
        ["(<", ">)"]
    ],
    "autoClosingPairs": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"],
        ["\"", "\""],
        ["({", "})"],
        ["([", "])"],
        ["(<", ">)"]
    ],
    "surroundingPairs": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"],
        ["\"", "\""],
        ["'", "'"],
        ["({", "})"],
        ["([", "])"],
        ["(<", ">)"]
    ],
    "indentationRules": {
        "increaseIndentPattern": "^(.*\\*)?\\s*((\\b(if|else|for|while|do|switch|case|default|foreach)\\b.*)|[^;]*\\{[^}]*|[^;]*\\([^)]*|.*\\{\\s*)$",
        "decreaseIndentPattern": "^\\s*((\\b(case|default)\\b.*:)|(\\})|(\\))).*$"
    },
    "wordPattern": "(-?\\d*\\.\\d\\w*)|([^\\`\\~\\!\\@\\#\\%\\^\\&\\*\\(\\)\\-\\=\\+\\[\\{\\]\\}\\\\\\|\\;\\:\\'\\\"\\,\\.\\<\\>\\/\\?\\s]+)",
    "folding": {
        "markers": {
            "start": "^\\s*#\\s*(region|if|ifdef|ifndef)\\b",
            "end": "^\\s*#\\s*(endregion|endif)\\b"
        }
    }
}